<odoo>
  <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="order_crm.list">
      <field name="name">order_crm list</field>
      <field name="model">order_crm.order_crm</field>
      <field name="arch" type="xml">
        <tree>
          <field name="order_id"/>
          <field name="name"/>
          <field name="ordered_person_name"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="payment_status"/>
          <field name="order_status"/>
          <field name="description"/>
          <field name="value2"/>

        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="order_crm.action_window">
      <field name="name">order_crm window</field>
      <field name="res_model">order_crm.order_crm</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="order_crm.action_server">
      <field name="name">order_crm server</field>
      <field name="model_id" ref="model_order_crm_order_crm"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="order_crm" id="order_crm.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="order_crm.menu_1" parent="order_crm.menu_root"/>
    <menuitem name="Menu 2" id="order_crm.menu_2" parent="order_crm.menu_root"/>

    <!-- actions -->
    <menuitem name="List" id="order_crm.menu_1_list" parent="order_crm.menu_1"
              action="order_crm.action_window"/>
    <menuitem name="Server to list" id="order_crm" parent="order_crm.menu_2"
              action="order_crm.action_server"/>

  </data>
</odoo>
